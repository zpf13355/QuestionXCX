
.question .title {
  margin-top: 20rpx;
  margin-left: 20rpx;

}
.question .title .join {
  display: flex;
  border: 2rpx solid rgb(83, 109, 165);
  align-items: center;
  justify-content: center;
  height: 50rpx;
  width: 220rpx;
  color:rgb(83, 109, 165);
  font-weight: 600;

  
}

.question .title .content {
  
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  font-size: 40rpx;
  margin-top: 25rpx;
  margin-left: 20rpx;
  height: 120rpx;
}
.question .beiZhu {
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
  margin-left: 20rpx;
}
.question .beiZhu .teacherName {
  font-size: 30rpx;
  color: rgb(83, 109, 165);
}
.question .beiZhu .teacherBlock {
  padding: 2rpx 8rpx;
  display: flex;
 
  background-color: rgb(111, 186, 221);
  margin-left: 15rpx;
  color: white;
  font-size: 25rpx;
  height: 37rpx;
  width: 59rpx;
}
.question .beiZhu .time {
  margin-left: 30rpx;
  color: #b9afaf;
  padding-right: 23rpx;
  font-size: 30rpx;
  margin-bottom: 20rpx;
}
.up {
  background-color: rgb(74, 110, 151);
  height: calc(100vh - 108rpx);
}
.up .first {
  margin-left: 10rpx;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
 
  
}
.up .first{
  color:  rgb(50, 167, 69);
  margin-left: 20rpx;
  font-size: 30rpx;
 
}
.up .first .time {
  margin-top: 10rpx;
  margin-left: auto;
  text-align: right;
  padding-right: 23rpx;
  font-size: 30rpx;
  color: #b9afaf;
}
.time2 {
 
  margin-left: auto;
  text-align: right;
  padding-right: 23rpx;
  font-size: 30rpx;
  color: rgb(83, 109, 165);
}
.up .second {
  display: flex;
  flex: 1;
  margin-left: 30rpx;
  margin-top: 50rpx;
  height: 180rpx;
  width: 800rpx;
}
.up .second .content {
  font-size: 40rpx;
  color: black;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}
.up .third {
  display: flex;
  margin-top: 20rpx;
  
}
.up .third .icon {
  display: flex;
  flex-direction: row-reverse;
  flex: 1;
  text-align: right;
}
.up .third .icon .dainzan {
  padding: 0 20rpx;
}
.up .third .icon .dainzan .icon-dianzan {
  font-size: 40rpx;
  color: rgb(50, 167, 69);
}
.up .third .icon .dainzan .dainzannum {
  font-size: 30rpx;
  color: rgb(50, 167, 69);
}
.up .third .icon .shoucang .icon-shoucang {
  font-size: 80rpx;
  color: rgb(0, 0, 0);
  float: left;
}
.up .third .icon .shoucang .shoucang_num {
  font-size: 40rpx;
  color:rgb(0, 0, 0);
  float: right;
}
